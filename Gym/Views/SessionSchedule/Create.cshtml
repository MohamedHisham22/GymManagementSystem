@model CreateMemberInUpcomingViewModel
@if (TempData["Error"] is not null)
{
    <div id="Alert" class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<h1>Create New Booking</h1>

<hr />
<div class="row">
    <div class="d-flex justify-content-center align-items-center h-100">

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Booking Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label class="form-label">Member</label>
                            <select asp-for="MemberId" asp-items="@ViewBag.Members" name="memberId" class="form-select">
                                <option value="">-- Select Member --</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Booking
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>


@section Scripts
{
    <partial name="_ValidationScripts"></partial>
}
