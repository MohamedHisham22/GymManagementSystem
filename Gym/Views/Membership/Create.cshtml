@if (TempData["Error"] is not null)
{
    <div id="Alert" class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@model CreateMembershipViewModel
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form asp-controller="Membership" asp-action="Create" method="post">
                        <div class="mb-3">
                            <label class="form-label">Member</label>
                            <select asp-for="MemberId" asp-items="@ViewBag.Members" class="form-select">
                                <option value="">-- Select Member --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Plan</label>
                            <select asp-for="PlanId" asp-items="@ViewBag.Plans" class="form-select">
                                <option value="">-- Select Plan --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Create Membership</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScripts"></partial>
}